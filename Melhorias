def obter_numeros():
    """
    Fun√ß√£o para capturar n√∫meros do usu√°rio at√© que 'sair' seja digitado.
    Retorna uma lista de n√∫meros v√°lidos.
    """
    numeros = []
    while True:
        entrada = input("Digite um n√∫mero (ou 'sair' para terminar): ").strip().lower()
        if entrada == 'sair':
            break
        try:
            numero = float(entrada)
            numeros.append(numero)
        except ValueError:
            print("‚ö† Entrada inv√°lida. Por favor, digite um n√∫mero v√°lido.")
    return numeros


def calcular_estatisticas(numeros):
    """
    Calcula e retorna estat√≠sticas como soma, m√©dia, m√≠nimo e m√°ximo.
    """
    soma = sum(numeros)
    media = soma / len(numeros)
    minimo = min(numeros)
    maximo = max(numeros)
    return soma, media, minimo, maximo


def exibir_resultados(numeros):
    """
    Exibe as estat√≠sticas calculadas de uma lista de n√∫meros.
    """
    print("\nResultados:")
    print(f"Quantidade de n√∫meros: {len(numeros)}")
    soma, media, minimo, maximo = calcular_estatisticas(numeros)
    print(f"Soma dos n√∫meros: {soma}")
    print(f"M√©dia dos n√∫meros: {media:.2f}")
    print(f"Menor n√∫mero: {minimo}")
    print(f"Maior n√∫mero: {maximo}")


def main():
    """
    Fun√ß√£o principal que executa o programa.
    """
    print("üî¢ Bem-vindo ao calculador de estat√≠sticas!\n")
    numeros = obter_numeros()
    if numeros:
        exibir_resultados(numeros)
    else:
        print("\nNenhum n√∫mero foi digitado. Encerrando o programa.")


if __name__ == "__main__":
    main()
